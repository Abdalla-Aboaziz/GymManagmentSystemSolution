
@model CreateTrainerViewModel


<div class="container mt-4">
    <header class="mb-4">
        <h3 class="text-primary-color">Add New Trainer</h3>
    </header>
	@Html.ValidationMessage("DataMissed", new { @class = "text-danger" })")
    <form method="post" asp-action="CreateTrainer">

        <!-- Trainer Info -->
        <div class="section-header mb-3">
            <h5 class="text-primary fw-bold">Personal Information</h5>
            <hr class="mt-2">
        </div>
        <div class="row g-3">
            <div class="col-12 col-md-6">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" name="Name" type="text" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>

            </div>

            <div class="col-12 col-md-6">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" name="Email" type="text" class="form-control" />
				<span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-6">
                <label asp-for="Phone" class="form-label">Phone</label>
                <input asp-for="Phone" name="Phone" type="text" class="form-control" />
				<span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-6">
                <label asp-for="DateOfBirth" class="form-label">DateOfBirth</label>
                <input asp-for="DateOfBirth" name="DateOfBirth" type="text" class="form-control" />
				<span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-6">
                <label asp-for="Gender" class="form-label"></label>
                <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()"  class="form-select">
                    <option value="">-- Select Gender --</option>
                   
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

        </div>
        <div class="section-header mb-3 mt-4">
            <h5 class="text-primary fw-bold">Address Information</h5>
            <hr class="mt-2">
        </div>
        <div class="row g-3">

            <div class="col-12 col-md-6">
                <label asp-for="BuildingNumber" class="form-label">BuildingNumber</label>
                <input asp-for="BuildingNumber" class="form-control" />
				<span asp-validation-for="BuildingNumber" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-6">
                <label asp-for="Street" class="form-label">Street</label>
                <input asp-for="Street" class="form-control" />
				<span asp-validation-for="Street" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6">
                <label asp-for="City" class="form-label">City</label>
                <input asp-for="City" class="form-control" />
				<span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>
        <!-- Professional Information -->
        <div class="section-header mb-3">
            <h5 class="text-primary fw-bold">Professional Information</h5>
            <hr class="mt-2">
        </div>
        <div class="row g-3">
            <div class="col-12">
                <label asp-for="Specialies" class="form-label" > </label>
                <select asp-for="Specialies" asp-items="Html.GetEnumSelectList<Specialies>()" class="form-select">
                    <option value="">-- Select Specialist --</option>
                </select>
				<span asp-validation-for="Specialies" class="text-danger"></span>
                   
               

          
            </div>
        </div>

        <footer class="d-flex justify-content-end mt-4">
            <button type="submit" class="btn btn-fill">Add</button>
        </footer>
    </form>

</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}